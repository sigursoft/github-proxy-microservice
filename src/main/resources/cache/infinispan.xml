<?xml version="1.0" encoding="UTF-8"?>
<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:infinispan:config:8.2 http://infinispan.org/schemas/infinispan-config-8.2.xsd"
            xmlns="urn:infinispan:config:8.2">

    <cache-container name="EmbeddedCacheManager" default-cache="the-default-cache" statistics="true" shutdown-hook="DEFAULT">
        <jmx domain="infinispan.cache" />
        <local-cache name="repos" simple-cache="true">
            <!-- Maximum cache size is 1M entries -->
            <eviction size="1000000"/>
            <!-- Expiration period is 1 day -->
            <expiration lifespan="86400000"/>
        </local-cache>
    </cache-container>

</infinispan>